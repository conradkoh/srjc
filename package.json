{
  "name": "next-convex-starter-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "nx run-many --target=test --projects=@workspace/webapp,@workspace/backend",
    "test:watch": "nx run-many --target=test:watch --projects=@workspace/webapp,@workspace/backend",
    "dev": "nx run @workspace/webapp:dev",
    "setup": "node scripts/setup.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "typecheck": "nx run-many --target=typecheck --projects=@workspace/webapp,@workspace/backend",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "biome format --write --no-errors-on-unmatched"
    ],
    "**/*.{json,md}": [
      "biome format --write --no-errors-on-unmatched"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@convex-dev/eslint-plugin": "^1.1.1",
    "@eslint/eslintrc": "^3",
    "@nx/workspace": "22.1.2",
    "@types/node": "^20.17.24",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.26.0",
    "eslint-config-next": "16.0.10",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "nx": "22.1.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.1.8"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "bun",
      "esbuild",
      "nx",
      "sharp",
      "unrs-resolver"
    ],
    "overrides": {
      "@radix-ui/react-dismissable-layer": "1.1.10"
    }
  }
}
