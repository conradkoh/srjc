{
  "name": "next-convex-starter-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "nx run-many --target=test --projects=@workspace/webapp,@workspace/backend",
    "test:watch": "nx run-many --target=test:watch --projects=@workspace/webapp,@workspace/backend",
    "dev": "nx run @workspace/webapp:dev",
    "setup": "node scripts/setup.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "typecheck": "nx run-many --target=typecheck --projects=@workspace/webapp,@workspace/backend",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,md}": [
      "biome format --write --no-errors-on-unmatched",
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@nx/workspace": "22.1.2",
    "@types/node": "^20.17.24",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "nx": "22.1.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.1.8"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "bun",
      "esbuild",
      "nx",
      "sharp",
      "unrs-resolver"
    ],
    "overrides": {
      "@radix-ui/react-dismissable-layer": "1.1.10"
    }
  }
